<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>bballdaniel3.com</title>
    <script>
        (function () {
            try {
                var t = localStorage.getItem('site-theme');
                if (!t) {
                    t = (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) ? 'dark' : 'light';
                }
                if (t === 'dark') {
                    document.documentElement.classList.add('dark-theme');
                } else {
                    document.documentElement.classList.remove('dark-theme');
                }
            } catch (e) { /* no-op */ }
        })();
    </script>
    <link rel="stylesheet" href="/css/animations.css">
    <link rel="stylesheet" href="/css/blog.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/guestbook.css">
    <link rel="stylesheet" href="/css/games.css">
    <link rel="stylesheet" href="/css/storyGame/results.css">
    <link rel="stylesheet" href="/css/storyGame/easyMDE.css">
    <link rel="stylesheet" href="/css/projects.css">
    <link rel="stylesheet" href="/css/summoning.css">
    <script defer src="https://unpkg.com/swup@4"></script>
    <script defer src="https://unpkg.com/@swup/forms-plugin@3"></script>
    <script defer src="https://unpkg.com/@swup/head-plugin@2"></script>
    <script defer src="https://unpkg.com/@swup/scroll-plugin@4"></script>
    <script defer src="https://unpkg.com/@swup/scripts-plugin@2"></script>
    <script defer type="module" src="/js/swup.js"></script>
    <script defer src="/js/theme.js"></script>
    <script defer src="/js/summoning.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/easymde/dist/easymde.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/easymde/dist/easymde.min.js"></script>
    <script type="text/javascript" src="/js/purify.min.js"></script>
    {{#each scripts}}
    <script type="text/javascript" src="{{script}}"></script>
    {{/each}}
</head>

<body id="swup" class="main-background">
    <header>
        {{> navbar }}
    </header>
    <main class="transition-fade transition-slide">
        <div class="horizontal-margins-lg">
            {{{body}}}
        </div>
    </main>
    <footer>
        {{> footer }}
    </footer>
</body>

</html>
