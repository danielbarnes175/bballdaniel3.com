<div class="container">
    <div class="card mb-8 text-center">
        <h1 class="mb-4">Guestbook</h1>
        <p class="mb-6 text-dim">Welcome to my guestbook. Feel free to sign it and share your thoughts!</p>
        
        <form action="/guestbook" method="POST" data-swup-form class="text-left">
            <div class="mb-4">
                <label for="guestbook-name" class="block mb-2">
                    <strong>Name</strong>
                </label>
                <input id="guestbook-name" class="guestbook-name-input" type="text" name="name" required 
                       aria-describedby="name-help" placeholder="Your name">
                <small id="name-help" class="text-dim">How should we address you?</small>
            </div>

            <div class="mb-6">
                <label for="guestbook-message" class="block mb-2">
                    <strong>Message</strong>
                </label>
                <textarea id="guestbook-message" class="guestbook-message-input" name="message" required 
                          aria-describedby="message-help" placeholder="Share your thoughts..." rows="4"></textarea>
                <small id="message-help" class="text-dim">What would you like to say?</small>
            </div>

            <div class="g-recaptcha" data-sitekey="6Le7JK0bAAAAADV3P6ZDDOXJHJImPrefIVghEs_7" data-bind="recaptcha-submit"
              data-callback="submitForm"></div>
            <button class="guestbook-submit-button btn btn-success" type="submit" id="recaptcha-submit">
                Sign the Guestbook
            </button>
        </form>
    </div>

    <div class="card">
        <h2 class="mb-6">Recent Guests</h2>
        {{#if entries.length}}
        <div class="grid grid-cols-1 gap-4">
            {{#each entries}}
            <div class="guestbook-comment-card">
                <div class="mb-2">
                    <strong style="color: {{color}}" class="text-lg">{{name}}</strong>
                    <span class="text-dim text-sm ml-2">({{date}})</span>
                </div>
                <p class="mb-0">{{message}}</p>
            </div>
            {{/each}}
        </div>
        {{else}}
        <div class="text-center text-dim">
            <p>No entries yet. Be the first to sign the guestbook!</p>
        </div>
        {{/if}}
    </div>
</div>
